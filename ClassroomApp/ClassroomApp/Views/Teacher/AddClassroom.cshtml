@model ClassroomApp.Models.ClassroomModel.AddClassroomViewModel
@{
    ViewData["Title"] = "AddClassroom";
}

<h1>AddClassroom</h1>

<form asp-action="AddClassroom" method="post">



    <div class="row">

        <div class="col-2">

            Subject Title

        </div>

        <div class="col-10">

            <input class="form-control" type="text" asp-for="Name" />

        </div>

    </div>

    <div class="row">

        <div class="col-10"></div>

        <div class="col-2">

            <button type="submit" class="btn btn-secondary">Save</button>

        </div>

    </div>

</form>

